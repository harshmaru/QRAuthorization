<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.romdroid.ibankauthenticator">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.romdroid.ibankauthenticator.barcode.BarcodeCaptureActivity">
        </activity>
        <activity
            android:name="tk.romdroid.ibankauthenticator.WebViewActivity">
        </activity>
        <activity
            android:name="tk.romdroid.ibankauthenticator.LoginActivity">
        </activity>
        <activity
            android:name="tk.romdroid.ibankauthenticator.SignupActivity">
        </activity>
        <activity
            android:name="tk.romdroid.ibankauthenticator.testClass">
        </activity>
    </application>

</manifest>